<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/register_appLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/app_logo">

    </ImageView>

    <EditText
        android:id="@+id/register_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_appLogo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:autofillHints="name"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_firstName"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/mystic"
        android:textSize="17sp">

    </EditText>

    <EditText
        android:id="@+id/register_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_firstName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="name"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_lastName"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <EditText
        android:id="@+id/register_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_lastName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="username"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_userName"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_userName"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="phone"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_phoneNumber"
        android:inputType="phone"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <EditText
        android:id="@+id/register_passWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="password"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_passWord"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <EditText
        android:id="@+id/register_re_passWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_passWord"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:autofillHints="password"
        android:background="@drawable/button_outer_design"
        android:hint="@string/register_confirmPass"
        android:inputType="textPassword"
        android:textColor="@color/mystic"
        android:textSize="17sp">
    </EditText>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_re_passWord"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_fill"
        android:padding="10dp"
        android:text="@string/register_buttonTxt"
        android:textAllCaps="false"
        android:textSize="18sp">

    </Button>

    <Button
        android:id="@+id/register_logInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_outer_design"
        android:text="@string/register_buttonTxtLog"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="italic">

    </Button>




</RelativeLayout>